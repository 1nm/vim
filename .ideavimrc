colorscheme gruvbox

set autoindent
set background=dark
set backspace=eol,start,indent
set cinoptions+=:0
set clipboard^=unnamed,unnamedplus
set cmdheight=2
set cursorline
set display=lastline
set expandtab
set history=1000
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set list
set listchars=tab:^\ ,trail:~
set noerrorbells
set nowrap
set number
set ruler
set shiftwidth=2
set showcmd
set showmatch matchtime=1
set smartcase
set smartindent
set smarttab
set softtabstop=2
set tabstop=2
set title
set whichwrap=b,s,h,l,<,>,[,],~

" ideavim
set ideajoin

nnoremap <Esc><Esc> :nohlsearch<CR><ESC>
syntax on
